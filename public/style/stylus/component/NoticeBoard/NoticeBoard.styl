
.notice-container
  width 100%
  max-width $contentWidth
  height 100%
  min-width 1100px
  display flex
  flex-direction row-reverse
  .notice
    padding $noticePadding
    width: $noticeWidth
    height 100%
    background $noticeBlack
    box-sizing border-box
    z-index 1
  .same-style
    display flex
    flex-direction row
    justify-content space-between
    align-items center
  .title
    height $noticeTitleHeight
    display flex
    flex-direction row
    align-items center
    span
      margin-left 16px
      color $white1
      font-size $bigFont
  .same-border
    border-bottom 1px solid rgba(105, 105, 105, 0.1)
  .more
    color $white2
    font-size $smallFont
    cursor pointer
  .content
    font-size $smallFont
    color $white3
    height 12px
    line-height 12px
    box-sizing border-box
    margin-bottom 25px
    cursor pointer
  .content:hover
    color $labmaiRed
    opacity 1
  .content:first-child
    margin-top 28px
  .content:last-child
    margin-bottom 24px